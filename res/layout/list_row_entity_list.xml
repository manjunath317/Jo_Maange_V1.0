<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
   	    android:id="@+id/to_user_details_id"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/item_pressed">
    	<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:padding="10dp">
			    <TextView
			        android:id="@+id/entity_list_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:drawablePadding="100dp"
			        android:textColor="@color/black"
			        android:textSize="@dimen/body_text"
			        android:hint="Box 8"/>
	       </LinearLayout>
	       <LinearLayout
	           android:layout_marginTop="30dp"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:padding="10dp">
			    <TextView
			        android:id="@+id/entity_list_location"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="@color/form_elmnt_color"
			        android:textSize="@dimen/search_bar_text"
			        android:drawablePadding="5dp"
			        android:hint="Indira Nagar, II stage, 3rd Cross"/>
	       </LinearLayout>
	       <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="right"
	            android:padding="5dp">
			    <ImageView
			        android:id="@+id/entity_list_icon"
			        android:layout_width="100dp"
			        android:layout_height="100dp"
			        android:contentDescription="@string/search_box_label"/>
	       </LinearLayout>
        </RelativeLayout>
   	</LinearLayout>
</RelativeLayout>