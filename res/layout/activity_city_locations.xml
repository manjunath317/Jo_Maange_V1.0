<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white_common">
     <RelativeLayout
         android:id="@+id/city_location_search_section_id"
           android:layout_width="match_parent"
           android:background="@color/home_bg_color"
           android:paddingTop="10dp"
           android:paddingBottom="10dp"
           android:visibility="gone"
           android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_corner_normal"
            android:orientation="vertical">
			<EditText
			    android:id="@+id/city_location_search_edit_text_id"
			    android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:hint="@string/city_location_search_label"
		        android:textColor="@color/black"
		        android:background="@android:color/transparent"
		        android:autoText="false"
		        android:gravity="fill_horizontal"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:drawableLeft="@drawable/search_icon"
		        android:drawablePadding="10dp"/>
         </LinearLayout>
         </RelativeLayout>
        <RelativeLayout
           android:layout_width="match_parent"
           android:layout_below="@+id/city_location_search_section_id"
           android:layout_height="match_parent">
           <ListView
		    android:id="@+id/chosse_location_list"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:divider="@color/home_bg_color"
		    android:listSelector="@android:color/transparent"
		    android:transcriptMode="alwaysScroll"
		    android:cacheColorHint="#00000000"
		    android:layout_margin="5dp"
		    android:dividerHeight="3dp"/>
           <ImageView
              android:id="@+id/city_location_search_icon"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:layout_alignParentRight="true"
		      android:layout_alignParentEnd="true"
		      android:layout_alignParentBottom="true"
              android:layout_marginRight="30dp"
              android:layout_marginBottom="30dp"
              android:contentDescription="@string/search_box_label"
              android:src="@drawable/search_icon3" />
           </RelativeLayout>
           
</RelativeLayout>