<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textSize">@dimen/action_bar_title</item>
    </style>

    <!-- ActionBar styles // android:Theme.Holo.Light.DarkActionBar -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/white_common</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

</resources>